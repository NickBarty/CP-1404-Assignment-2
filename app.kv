BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
#   Left hand side of GUI
        orientation: 'vertical'
        size_hint_x: 0.35
        BoxLayout:
#       Spinner widget to select how to sort songs
            orientation: 'vertical'
            size_hint_y: 0.25
            Label:
                text: 'Sort by:'
            Spinner:
                id: sort_options
                text: app.current_sort_option
                values: app.sort_options
                on_text: app.sort_songs(self.text)
        BoxLayout:
#       Add song section
            orientation: 'vertical'
            Label:
                text: 'Add New Song...'
            Label:
                text: 'Title:'
            TextInput:
                id: input_title
                font_size: 18
                write_tab: False
                multiline: False
                on_text_validate: app.add_song()
                background_color: (1,1,1,1) if self.focus else (1,1,1,0.7)
            Label:
                text: 'Artist:'
            TextInput:
                id: input_artist
                font_size: 18
                write_tab: False
                multiline: False
                on_text_validate: app.add_song()
                background_color: (1,1,1,1) if self.focus else (1,1,1,0.7)
            Label:
                text: 'Year:'
            TextInput:
                id: input_year
                font_size: 18
                write_tab: False
                multiline: False
                on_text_validate: app.add_song()
                background_color: (1,1,1,1) if self.focus else (1,1,1,0.7)
        BoxLayout:
#       Buttons to add the song or clear the fields
            orientation: 'vertical'
            size_hint_y: 0.25
            Button:
                text: 'Add Song'
                on_release: app.add_song()
            Button:
                text: 'Clear'
                on_release: app.clear_inputs()
    BoxLayout:
#   Right hand side of GUI
        orientation: 'vertical'
        BoxLayout:
#       To learn / Learned status
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                id: output_song_learned_status_label
                size_hint_y: 0.1
        BoxLayout:
#       Song list area
            orientation: 'vertical'
            id: songsBox
            cols: 1
            orientation: 'vertical'
        BoxLayout:
#       Status messages
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                id: status_text
                text: ''
                size_hint_y: 0.1
